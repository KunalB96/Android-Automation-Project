package Demo;

import java.net.MalformedURLException;
import java.net.URI;
import java.net.URL;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebElement;

import io.appium.java_client.android.AndroidDriver;
import io.appium.java_client.android.options.UiAutomator2Options;

public class BrowserAutomation {

	public static void main(String[] args) throws MalformedURLException, InterruptedException {
		
		 AndroidDriver driver = null;

	        
         UiAutomator2Options options = new UiAutomator2Options();

    
         options.setPlatformName("Android");
         options.setAutomationName("UiAutomator2");
         options.setDeviceName("RMX3853");
         options.setPlatformVersion("15");
         
         //For Chrome
         // options.setCapability("browserName", "Chrome");   //download required driver version 
         //   options.setCapability("chromedriverExecutable","D:\\Android Automation Project\\Appium_Projects\\driver\\chromedriver.exe");
        
         //For Edge
         options.setCapability("browserName", "Edge");
         options.setCapability("edgedriverExecutable","D:\\Android Automation Project\\Appium_Projects\\driver\\msedgedriver.exe");
       
         

  

     //    options.setAutoGrantPermissions(true);
    //     options.setIgnoreHiddenApiPolicyError(true);

         // âœ… CORRECT for Dialer
  //       options.setNoReset(true);
   //      options.setFullReset(false);
         options.setCapability("appium:forceAppLaunch", true);
         
         URL url = URI.create("http://127.0.0.1:4723/").toURL();
         driver = new AndroidDriver(url, options);
         
         
         Thread.sleep(3000);
         System.out.println("API Demos app launched");
         
         //open url
         driver.get("https://www.google.com/");
	        
	        //find search box web element
	        WebElement searchBox = driver.findElement(By.name("q"));
	        
	        searchBox.sendKeys("Raigad Fort");
	        searchBox.sendKeys(Keys.RETURN);
	        
	        Thread.sleep(3000);
	        driver.quit();
         
         
         
         

	}

}
